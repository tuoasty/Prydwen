generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Character {
  id          Int     @id @default(autoincrement())
  name        String
  rarity      Int
  imageUrl    String
  elementId   Int
  element     Element @relation(fields: [elementId], references: [id])
  pathId      Int
  path        Path @relation(fields: [pathId], references: [id])
}

model Element {
  id          Int     @id @default(autoincrement())
  name        String
  color       String
  imageUrl    String
  characters  Character[]
}

model Path {
  id          Int     @id @default(autoincrement())
  name        String
  characters  Character[]
}